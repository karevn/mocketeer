{
  "extends": ["standard"],
  "rules": {
    "arrow-parens": [2, "as-needed"],
    "space-before-function-paren": "off",
    "quotes": [1, "double"],
    "semi": [1, "always"]
  },
  "plugins": ["eslint-plugin-jest"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "jest/globals": true
  }
}
